#!/usr/bin/with-contenv bash

SEARCH_CACHE_SIZE_TERM=${SEARCH_CACHE_SIZE_TERM:-"256M"}
SEARCH_ENABLE_HTTP=${SEARCH_ENABLE_HTTP:-"FALSE"}
SEARCH_ENABLE_HTTPS=${SEARCH_ENABLE_HTTPS:-"FALSE"}
SEARCH_INDEX_ATTACHMENTS=${SEARCH_INDEX_ATTACHMENTS:-"FALSE"}
SEARCH_INDEX_ATTACHMENTS_MAX_SIZE=${SEARCH_INDEX_ATTACHMENTS_MAX_SIZE:-"5M"}
SEARCH_INDEX_DRAFTS=${SEARCH_INDEX_DRAFTS:-"TRUE"}
SEARCH_INDEX_JUNK=${SEARCH_INDEX_JUNK:-"TRUE"}
SEARCH_INDEX_PATH=${SEARCH_INDEX_PATH:-"/data/search/"}
SEARCH_INDEX_PROCESSES=${SEARCH_INDEX_PROCESSES:-1}
SEARCH_LIMIT_RESULTS=${SEARCH_LIMIT_RESULTS:-1000}
SEARCH_LISTEN_HOST=${SEARCH_LISTEN_HOST:-"0.0.0.0"}
SEARCH_LISTEN_PORT=${SEARCH_LISTEN_PORT:-1238}
SEARCH_SSL_CERT_FILE=${SEARCH_SSL_CERT_FILE:-"/certs/core/search.crt"}
SEARCH_SSL_KEY_FILE=${SEARCH_SSL_KEY_FILE:-"/certs/core/search.pem"}
SEARCH_SSL_LISTEN_CERT_FILE=${SEARCH_SSL_LISTEN_CERT_FILE:-"/certs/core/search-listen.crt"}
SEARCH_SSL_LISTEN_KEY_FILE=${SEARCH_SSL_LISTEN_KEY_FILE:-"/certs/core/search-listen.pem"}
SEARCH_SUGGESTIONS=${SEARCH_SUGGESTIONS:-"FALSE"}
SEARCH_TIMEOUT=${SEARCH_TIMEOUT:-10}
SERVER_ALLOW_LOCAL_USERS=${SERVER_ALLOW_LOCAL_USERS:-"TRUE"}