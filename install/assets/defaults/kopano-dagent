#!/usr/bin/with-contenv bash

DAGENT_ARCHIVE_ON_DELIVERY=${DAGENT_ARCHIVE_ON_DELIVERY:-"FALSE"}
DAGENT_ENABLE_FORWARD_WHITELIST=${DAGENT_ENABLE_FORWARD_WHITELIST:-"FALSE"}
DAGENT_ENABLE_PLUGIN=${DAGENT_ENABLE_PLUGIN:-"FALSE"}
DAGENT_FORWARD_WHITELIST_DOMAINS=${DAGENT_FORWARD_WHITELIST_DOMAINS:-"*"}
DAGENT_FORWARD_WHITELIST_DOMAINS_MESSAGE=${DAGENT_FORWARD_WHITELIST_DOMAINS_MESSAGE:-"The Kopano mail system has rejected your request to forward your e-mail with subject %subject (via mail filters) to %sender: the operation is not permitted.\n\nRemove the rule or contact your administrator about the forward_whitelist_domains setting."}
DAGENT_FORWARD_WHITELIST_DOMAINS_SUBJECT=${DAGENT_FORWARD_WHITELIST_DOMAINS_SUBJECT:-"REJECT: %subject not forwarded (administratively blocked)"}
DAGENT_INSECURE_HTML_JOIN=${DAGENT_INSECURE_HTML_JOIN:-"FALSE"}
DAGENT_LISTEN_HOST=${DAGENT_LISTEN_HOST:-"*"}
DAGENT_LISTEN_PORT=${DAGENT_LISTEN_PORT:-2003}
DAGENT_LMTP_MAX_THREADS=${DAGENT_LMTP_MAX_THREADS:-20}
DAGENT_LOG_RAW_MESSAGES=${DAGENT_LOG_RAW_MESSAGES:-"FALSE"}
DAGENT_NO_DOUBLE_FORWARD=${DAGENT_NO_DOUBLE_FORWARD:-"TRUE"}
DAGENT_PATH_PLUGIN=${DAGENT_PATH_PLUGIN:-"/data/dagent/plugins/"}
DAGENT_PATH_RAW_MESSAGES=${DAGENT_PATH_RAW_MESSAGES:-"/data/dagent/raw_messages"}
DAGENT_SET_RULE_HEADERS=${DAGENT_SET_RULE_HEADERS:-"FALSE"}
DAGENT_SPAM_HEADER_NAME=${DAGENT_SPAM_HEADER_NAME:-"X-Spam-Status"}
DAGENT_SSL_CERT_FILE=${DAGENT_SSL_CERT_FILE:-"/certs/core/dagent.crt"}
DAGENT_SSL_KEY_FILE=${DAGENT_SSL_KEY_FILE:-"/certs/core/dagent.pem"}
